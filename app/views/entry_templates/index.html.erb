<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All entries
    </h1>

    <a href="/entries/new" class="btn btn-block btn-outline-secondary">
      Add a new entry
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "entry_templates/entries_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Content
        </th>

        <th>
          Image
        </th>

        <th>
          Owner
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @entries.each do |entry| %>
      <tr>
        <td>
          <%= entry.id %>
        </td>

        <td>
          <%= entry.content %>
        </td>

        <td>
          <img src='<%= entry.image %>' class='img-fluid'>
        </td>

        <td>
          <% if entry.owner.present? %>
            <a href="/users/<%= entry.owner.id %>">
              <%= entry.owner.username %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(entry.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(entry.updated_at) %> ago
        </td>

        <td>
          <a href="/entries/<%= entry.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @entries, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
